<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DeleteCarActivity">

    <!-- Input field for VIN -->
    <EditText
        android:id="@+id/delete_vin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/delete_vin"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Button to delete car by VIN -->
    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteCarByVin"
        android:text="@string/delete_button"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- TextView to display the result message -->
    <TextView
        android:id="@+id/result_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- CoordinatorLayout for Snackbar -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/myCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>