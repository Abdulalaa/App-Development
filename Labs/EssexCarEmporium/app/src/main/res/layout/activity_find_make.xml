<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FindMakeActivity">

    <!-- Input field for car make -->
    <EditText
        android:id="@+id/edit_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_make"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Button to search for cars by make -->
    <Button
        android:id="@+id/search_by_make_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchByMake"
        android:text="@string/search_by_make_button"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- TextView to display the filtered car details -->
    <TextView
        android:id="@+id/text_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

</LinearLayout>